rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users for teams collection
    match /teams/{teamId} {
      allow read, write: if true;
    }
    
    // Allow read/write access to all users for questions collection
    match /questions/{questionId} {
      allow read, write: if true;
    }
    
    // Note: For production, you might want to add authentication
    // and restrict write access to admins only for questions
  }
}
